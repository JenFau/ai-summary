---
layout: base
---

<h1>Items tagged “{{ tag }}”</h1>

<ul class="summary-list">
  {# This layout is used by src/common/tagList.njk (global tags). #}
  {# It lists any content Eleventy indexed under the tag key. #}
  {% for item in collections[tag] %}
    <li>
      <a href="{{ item.url }}">{{ item.data.title }}</a><br>
      {% if item.date %}
        <small>{{ item.date | formatDate("DD MMM YYYY") }}</small><br>
      {% endif %}
      {% if item.data.summary %}
        <p>{{ item.data.summary }}</p>
      {% endif %}
    </li>
  {% endfor %}
</ul>
