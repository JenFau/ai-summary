---
layout: summary
---

<h1>{{ title }}</h1>

<ul class="summary-list">
  {% for post in collections.videoSummaries %}
    {% if post.data.tags and (tag in post.data.tags) %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a><br>
        {% if post.date %}<small>{{ post.date | formatDate("DD MMM YYYY") }}</small>{% endif %}
        {% if post.data.summary %}<p>{{ post.data.summary }}</p>{% endif %}

        {% if post.data.tags and post.data.tags.length %}
          <p class="labels"><strong>Labels:</strong>
            {% for t in post.data.tags %}
              <a href="/videos/labels/{{ t | slug }}/">{{ t }}</a>{% if not loop.last %}, {% endif %}
            {% endfor %}
          </p>
        {% endif %}
      </li>
    {% endif %}
  {% endfor %}
</ul>
