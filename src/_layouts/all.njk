title: All papers
layout: base
permalink: /summaries/all/index.html
---

<h1>All papers</h1>

<ul class="summary-list">
  {% for post in collections.allPapers %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a><br>
      {% if post.date %}
        <small>{{ post.date | formatDate("DD MMM YYYY") }}</small><br>
      {% endif %}
      {% if post.data.summary %}
        <p>{{ post.data.summary }}</p>
      {% endif %}
      {% if post.data.tags and post.data.tags.length %}
        <p class="text-sm">
          <strong>Labels:</strong>
          {% for t in post.data.tags %}
            <a href="/summaries/labels/{{ t | slug }}/">{{ t }}</a>{% if not loop.last %}, {% endif %}
          {% endfor %}
        </p>
      {% endif %}
    </li>
  {% endfor %}
</ul>
