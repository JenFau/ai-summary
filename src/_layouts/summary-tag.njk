---
layout: base
---

<h1>{{ title }}</h1>

<ul class="summary-list">
  {# Loop every paper, show only those that include the current tag #}
  {% for post in collections.summaries %}
    {% if post.data.tags and (tag in post.data.tags) %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a><br>
        {% if post.date %}
          <small>{{ post.date | formatDate("DD MMM YYYY") }}</small>
        {% endif %}
        {% if post.data.summary %}
          <p>{{ post.data.summary }}</p>
        {% endif %}

        {% if post.data.tags and post.data.tags.length %}
          <p class="labels"><strong>Labels:</strong>
            {% for t in post.data.tags %}
              <a href="/summaries/labels/{{ t | slug }}/">{{ t }}</a>{% if not loop.last %}, {% endif %}
            {% endfor %}
          </p>
        {% endif %}
      </li>
    {% endif %}
  {% endfor %}
</ul>
